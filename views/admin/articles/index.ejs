<%- include('../../partials/header') %>
<body>
    <%- include('../../partials/navbar') %>
    <div class="container">
        <br>
        <h2>Artigos</h2>
        <a href="/admin/article/new" class="btn btn-success">Criar novo artigo</a>
        <br><br>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Categoria</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% articles.forEach(article=>{ %>
                <tr>
                    <th><%= article.id %></th>
                    <th><%= article.title %></th>
                    <th><%= article.category.title %></th>
                    <th><%= article.slug %></th>
                    <th>
                        <a href="/articles/edit/<%= article.id %>" class="btn btn-warning">Editar</a>
                        <form action="/articles/delete/<%= article.id %>" method="post" style="display: inline;" onsubmit="deleteConf(event, this)">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                        <a href="/article/<%= article.slug %>" class="btn btn-primary">Ver</a>
                    </th>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
<%- include('../../partials/footer') %>

<script>
    function deleteConf(event, form){
        event.preventDefault();
        let conf = confirm("Deseja realmente deletar este artigo?");
        if(conf){
            form.submit();
        }
    }
</script>