<%- include('../../partials/header.ejs'); %>
<body>
    <%- include('../../partials/navbar.ejs') %>
    <div class="container">
        <br>
        <h2>Usuários</h2>
        <a href="/admin/users/create" class="btn btn-success">Criar nova categoria</a>
        <br><br>
        <table class="table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>E-mail</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(u=>{ %>
                <tr>
                    <th><%= u.name %></th>
                    <th><%= u.email %></th>
                    <th>
                        <form action="/admin/users/delete/<%= u.id %>" method="post" style="display: inline;" onsubmit="deleteConf(event, this)">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </th>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
<%- include('../../partials/footer.ejs') %>
<script>
    function deleteConf(event, form){
        event.preventDefault();
        let conf = confirm("Deseja realmente deletar esta categoria?");
        if(conf){
            form.submit();
        }
    }
</script>